{
  "compilerOptions": {
    /* Language & emit */
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node"],
    "module": "CommonJS",
    "moduleResolution": "Node10",
    "outDir": "dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Interop & ergonomics */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    /* Paths / imports */
    "baseUrl": ".",
    "paths": {
      "#/*": ["./*"]
    },

    /* Build hygiene */
    "importsNotUsedAsValues": "remove",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },

  "include": [
    "index.ts",
    "packages/**/*.ts",
    "generated/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
